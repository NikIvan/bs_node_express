pri-color = #708090
pri-color-dark-1 = #51667A
pri-color-dark-2 = #374F66
pri-color-light-1 = #95A0AA
pri-color-light-2 = #CACFD4

sec-color = #DEC6A9
sec-color-dark-1 = #BCA277
sec-color-dark-2 = #9C8050
sec-color-light-1 = #FFF2DD
sec-color-light-2 = #FFFAF2

light-shadow = 0 .7px 0 rgba(255, 255, 255, .6);
dark-shadow = 0 .7px 0 rgba(0, 0, 0, .6);


body, div,
h1, p
  margin 0
  padding 0
  
div
  box-sizing border-box
  
body
  font-size 18px
  font-family 'Roboto', Arial, sans-serif
  background-color pri-color-light-1
  color #333
  text-shadow light-shadow
  
  & p
    text-shadow none

#container
  margin 20px
  
#header
  padding 40px
  text-align center
  
  & h1
    font-size 2.5em

ul.nav
  list-style none
  text-align center
  padding 0
  margin-bottom: 20px;
  
  & > li
    display inline-block
    margin-left 20px
    padding 20px 0
    
    &:first-child
      margin-left 0
#content
  text-align center
  
  #name input,
  #message textarea
      font-size 1.2em
      border none
      padding 20px
  
  #chat
    list-style none
    background-color sec-color-light-1
    overflow-wrap break-word
    overflow-y scroll
    max-height 400px
    
  #message
    textarea
      resize: vertical;

@media screen and (max-width: 480px)
  ul.nav
    & > li
      display block
      margin-bottom 20px
      
      &:last-child
        margin-bottom 0

@import _error
@import _btn
  